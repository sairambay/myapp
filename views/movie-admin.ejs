<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="index.html"><i class="fa fa-home"></i> Home</a>
                    <a href="categories.html">Admin</a>
                    <span>Movies</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!--Search-->
<div class="Research">
    <div class="container mt-3 text-center">
        <div class="row justify-content-center">
            <div class="col-md-8 col-12 content ">
                <h3>Users</h3>
                <% if (typeof message != 'undefined') { %>
                    <h2><%= message %></h2>
                <% } %>
                <div id="search">
                    <a href="/movies-add"><button type="button" class="btn btn-success">Add New Movie</button></a>

                    <table class="table table-dark">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Country</th>
                            <th scope="col">Year</th>
                            <th scope="col">Update</th>
                            <th scope="col">Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for(var i=0; i<movies.length; i++) {%>

                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= movies[i].name %></td>
                            <td><%= movies[i].category %></td>
                            <td><%= movies[i].country %></td>
                            <td><%= movies[i].madeYear %></td>

                            <td>
                                <a href="/movies/update/<%= movies[i]._id.toString() %>"><button type="button"  class="btn btn-primary">Update</button></a>
                            </td>
                            <td>
                                <a href="/movies/delete/<%= movies[i]._id.toString() %>"><button type="button"  class="btn btn-danger">Delete</button></a>
                            </td>
                        </tr>

                        <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

