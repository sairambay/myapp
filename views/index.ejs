<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>| Home |</title>
    <link rel="apple-touch-icon" sizes="57x57" href="apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="192x192"  href="android-icon-192x192.png">
    <link rel="icon" type="image/png" sizes="32x32" href="favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">


    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:wght@300;400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="/css/plyr.css" type="text/css">
    <link rel="stylesheet" href="/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
</head>

<body>
<!-- Page Preloder -->
<div id="preloder">
    <div class="loader"></div>
</div>
</body>

<!-- Header Section Begin -->
<%- include('partials/header') %>
<!-- Header End -->


<!-- Hero Section Begin -->
<section class="hero">
    <div class="container">
        <% if (typeof message != 'undefined') { %>
            <h2><%= message %></h2>
            <h2><%= user.username %></h2>
        <% } %>
        <div class="hero__slider owl-carousel">
        <% for(var i=0; i<movies.length; i++) {%>
                    <div class="hero__items set-bg z-index 999999" data-setbg="<%=movies[i].imageUrl%>">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="hero__text">
                                    <div class="label"><%=movies[i].category%></div>
                                    <h2><%=movies[i].name%></h2>
                                    <p><%=movies[i].shortDescription%></p>

                                    <a href="<%=movies[i].videoUrl%>"><span>Watch Now</span> <i class="fa fa-angle-right"></i></a>

                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</section>
<!-- Hero Section End -->
<!--studio-->


<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="live__product">
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-8">
                            <div class="section-title">
                                <h4>All Films</h4>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="btn__all">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                            <% for(var i=0; i<movies.length; i++) {%>
                        <a href="/movies/<%=movies[i]._id.toString()%>">
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="<%=movies[i].bookImageUrl%>">
                                    //<div class="comment"><i class="fa fa-comments"></i> 11</div>
                                </div>
                                <div class="product__item__text">
                                    <ul>
                                        <li><%=movies[i].category%></li>
                                    </ul>
                                    <h5><a href="#"><%=movies[i].name%></a></h5>

                                    <%if (user) { %>
                                    <%if (movies[i].isInWishList && movies[i].isInWishList === true) { %>
                                    <h4>Already added to wishlist</h5>
                                    <% } else { %>
                                    <a href="/movies-wish-list-add/<%=movies[i]._id.toString()%>">
                                    <button type="button" class="btn btn-danger">Add to WishList</button>
                                    </a>
                                    <% }} %>
                                </div>
                            </div>
                        </div>
                        </a>
                                            <% } %>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Section End -->

<!-- Footer Section Begin -->
<%- include('partials/footer') %>
<!-- Footer Section End -->

<!-- Js Plugins -->
<script src="/js/jquery-3.3.1.min.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/player.js"></script>
<script src="/js/jquery.nice-select.min.js"></script>
<script src="/js/mixitup.min.js"></script>
<script src="/js/jquery.slicknav.js"></script>
<script src="/js/owl.carousel.min.js"></script>
<script src="/js/main.js"></script>


</body>

</html>
